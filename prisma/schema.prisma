
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  name     String?
  password String
}

model product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  url         String
  title       String
  description String
  price       String
  mainImg     String?
  img1        String?
  img2        String?
}
