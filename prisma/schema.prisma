generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
}

model Product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       Float
  image       String
  category    String
}

